CREATE DATABASE SS_ASSIGNMENT_1;

CREATE OR REPLACE TABLE "SS_UK_BANK_CUSTOMERS"
    (
    CUSTOMER_ID STRING NOT NULL PRIMARY KEY ,
    NAME VARCHAR(20) NOT NULL,
    SURNAME VARCHAR(20) NOT NULL,
    GENDER VARCHAR(10) NOT NULL,
    AGE STRING NOT NULL,
    REGION VARCHAR(30) NOT NULL,
    JOB_CLASSIFICATION VARCHAR (50) NOT NULL,
    DATE_JOINED STRING NOT NULL,
    BALANCE NUMBER(10,2) NOT NULL
    );
    
 DESCRIBE TABLE "SS_UK_BANK_CUSTOMERS"
 
 SELECT * FROM "SS_UK_BANK_CUSTOMERS"
 
 
USE DATABASE SS_ASSIGNMENT_1;

CREATE OR REPLACE TABLE "SS_CAR_SALES"
(
    INVOICE_DATE STRING NOT NULL,
    CAR_MAKE VARCHAR(30),
    COUNTRY VARCHAR(30),
    DEALER STRING,
    SALE_PRICE NUMBER(10,2) NOT NULL,
    COST_PRICE NUMBER(10,2)NOT NULL,
    TOTAL_DISCOUNT NUMBER(10,2),
    DELIVERY_CHARGE NUMBER(10,2),
    SPARE_PARTS NUMBER(10,2),
    LABOUR_COST NUMBER(10,2),
    CLIENT_NAME VARCHAR(50) NOT NULL,
    MODEL VARCHAR(30),
    COLOUR VARCHAR(30),
    REPORTING_YEAR STRING,
    REPORTING_MONTH STRING,
    REGISTRATION_DATE STRING NOT NULL,
    VEHICLE_TYPE CHAR(20),
    INVOICE_NUMBER STRING NOT NULL PRIMARY KEY,
    COUNTRY_ISO_CODE CHAR(20),
    OUTSIDE_POSTCODE CHAR(20),
    REGION VARCHAR(50)
);

DESCRIBE TABLE "SS_CAR_SALES";
SELECT * FROM "SS_CAR_SALES";

SELECT DISTINCT * FROM  SS_CAR_SALES  WHERE INVOICE_DATE LIKE '%2012';

SELECT DISTINCT * FROM SS_CAR_SALES WHERE COLOUR LIKE 'Re%';

SELECT DISTINCT * FROM SS_CAR_SALES WHERE COLOUR in ('Red','Blue');
USE DATABASE SS_ASSIGNMENT_1;

CREATE OR REPLACE TABLE "SS_LONG_TERM_UNEMPLOYMENT"
(
    AGE STRING,
    GENDER CHAR (20),
    PERIOD STRING,
    UNEMPLOYED STRING
);

