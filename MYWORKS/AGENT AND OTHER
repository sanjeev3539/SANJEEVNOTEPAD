select * from AGENT;

SELECT CONCAT('AGENT_CODE','AGENT_NAME') AS AGENT_DETAILS FROM AGENT;

UPDATE AGENT
SET COUNTRY = 'IN' WHERE COUNTRY ='NULL' OR COUNTRY = '';

SELECT AGENT_CODE,AGENT_NAME,SUBSTR(AGENT_CODE,-3,3)AS AGENT_INITIALS FROM AGENT;

SELECT SUBSTR('SANJEEV SAMBASIVAN',0,7);

SELECT SUBSTRING('SANJEEV SAMBASIVAN',-5,5);

SELECT SUBSTRING('NIRANJAN SANJEEV',0,8);
SELECT LEN('NIRANJAN SANJEEV')AS NAME_LENGTH; -- SPACE ALSO COUNTABLE

SELECT SUBSTR('NIRANJAN SANJEEV',1,1)|| SUBSTR('NIRANJAN SANJEEV',10,1) AS INITIAL;

SELECT CONCAT(SUBSTR('NIRANJAN SANJEEV',1,1),SUBSTR('NIRANJAN SANJEEV',10,1)) AS INITIAL;

SELECT 'NIRANJAN'||'SANJEEV' AS FULL;

SELECT CONCAT('NIRANJAN','SANJEEV');
    
SELECT CAST('1.648'AS DECIMAL(6,2));

SELECT CAST('30-MAY-1983' AS TIMESTAMP);

SELECT TRIM('---NIRANJAN---','-');---TRIMS LEFT OR RIGHT END ONLY NOT IN MIDDLE
