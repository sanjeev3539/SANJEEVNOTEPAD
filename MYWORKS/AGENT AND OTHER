CREATE OR REPLACE TABLE AGENTS
(
AGENT_CODE VARCHAR(20),
AGENT_NAME VARCHAR(30),
WORKAREA VARCHAR(10),
COMMISSION NUMBER(10,0),
COUNTRY VARCHAR(50)
);
DESCRIBE TABLE AGENTS

INSERT into AGENTS
VALUES('2','AMBADY','OACHIRA','20','INDIA')

select * from AGENTS

USE DATABASE DEMODATABASE;

CREATE TABLE  "AGENT" 
   (	
    "AGENT_CODE" CHAR(6) NOT NULL PRIMARY KEY, 
	"AGENT_NAME" CHAR(40), 
	"WORKING_AREA" CHAR(35), 
	"COMMISSION" NUMBER(10,2) default 0.05, 
	"PHONE_NO" CHAR(15), 
	"COUNTRY" VARCHAR2(25) 
	 );

